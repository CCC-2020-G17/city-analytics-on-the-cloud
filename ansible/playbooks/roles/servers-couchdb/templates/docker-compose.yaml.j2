version: "3.7"

services:
  couch_master:
    image: mgsweet/server_couchdb
    restart: always
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - {{ couchDB_data_dir }}:/opt/couchdb/data
    environment:
      - COUCHDB_USER={{ couchDB_user }}
      - COUCHDB_PASSWORD={{ couchDB_password }}
      - NODENAME={{ hostvars[inventory_hostname]['ansible_env'].SSH_CONNECTION.split(' ')[2] }}
    container_name: server-couchdb
    