version: "3.7"

services:
    restful_api_server:
        image: mgsweet/server_restful_api_server:latest
        container_name: restful_api_server
        restart: always
        environment:
            - APP_NAME=MyFlaskApp
        expose:
            - 3000
        volumes:
            - {{config_dir}}:/app/config

    nginx:
        build: ./nginx
        container_name: nginx
        privileged: true
        restart: always
        ports:
            - "80:80"
        volumes:
            - {{frontend_dir}}:/dist

